@page

@model Checkers_2._0.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Service Type</h2>
<br />
<form method="post">
    <div class="border ">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Player1"></label>
            </div>
            <div class="col-5">
                <input asp-for="Game.Player1" class="form-control" />
            </div>
            <span asp-validation-for="Game.Player1" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Player2"></label>
            </div>
            <div class="col-5">
                <input asp-for="Game.Player2" class="form-control" />
            </div>
            <span asp-validation-for="Game.Player2" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Game.Board"></label>
            </div>
            <div class="col-5">
                <input asp-for="Game.Board" class="form-control" />
            </div>
            <span asp-validation-for="Game.Board" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

